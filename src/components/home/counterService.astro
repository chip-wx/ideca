<script lang="ts">
    function startCountdown() {
        const span = document.querySelector(".countdown");
        const title = document.querySelector(".titleService");

        function getNextService(now) {
            const day = now.getDay();
            const year = now.getFullYear();
            const month = now.getMonth();
            const date = now.getDate();

            // Horas del día actual
            const wed_715 = new Date(year, month, date, 19, 15, 0);
            const wed_830 = new Date(year, month, date, 20, 30, 0);

            const sun_830 = new Date(year, month, date, 8, 30, 0);
            const sun_1000 = new Date(year, month, date, 10, 0, 0);

            const sun_1100 = new Date(year, month, date, 11, 0, 0);
            const sun_1230 = new Date(year, month, date, 12, 30, 0);

            // Función para obtener el día de la semana próximo
            function nextWeek(dateObj, targetDay) {
                const result = new Date(dateObj);
                result.setDate(result.getDate() + ((targetDay - day + 7) % 7));
                return result;
            }

            // Crear fechas completas para próximos servicios
            const nextWed_715 = nextWeek(now, 3); nextWed_715.setHours(19, 15, 0, 0);
            const nextSun_830 = nextWeek(now, 0); nextSun_830.setHours(8, 30, 0, 0);
            const nextSun_1100 = nextWeek(now, 0); nextSun_1100.setHours(11, 0, 0, 0);

            // *** DETECTAR MOMENTOS EN VIVO ***
            if (day === 3 && now >= wed_715 && now <= wed_830) {
                return { mode: "live", service: "Miércoles de Intimidad" };
            }
            if (day === 0 && now >= sun_830 && now <= sun_1000) {
                return { mode: "live", service: "Servicio Dominical" };
            }
            if (day === 0 && now >= sun_1100 && now <= sun_1230) {
                return { mode: "live", service: "Servicio Dominical" };
            }

            // *** PRÓXIMO SERVICIO (CUENTA REGRESIVA) ***
            const upcoming = [
                { date: nextWed_715, service: "Miércoles de Intimidad" },
                { date: nextSun_830, service: "Servicio Dominical" },
                { date: nextSun_1100, service: "Servicio Dominical" }
            ].filter(s => s.date > now);

            upcoming.sort((a, b) => a.date - b.date);

            return {
                mode: "countdown",
                target: upcoming[0].date,
                service: upcoming[0].service
            };
        }

        function update() {
            const now = new Date();
            const result = getNextService(now);

            // --- EN VIVO ---
            if (result.mode === "live") {
                span.textContent = "Estamos en vivo";
                title.textContent = result.service;
                return;
            }

            // --- COUNTDOWN ---
            const diff = result.target - now;

            const hours = Math.floor(diff / 1000 / 60 / 60);
            const minutes = Math.floor((diff / 1000 / 60) % 60);
            const seconds = Math.floor((diff / 1000) % 60);

            span.textContent =
                `${hours.toString().padStart(2, "0")}:` +
                `${minutes.toString().padStart(2, "0")}:` +
                `${seconds.toString().padStart(2, "0")}`;

            title.textContent = result.service;
        }

        update();
        setInterval(update, 1000);
    }

    if (typeof window !== "undefined") {
        startCountdown();
    }
</script>
